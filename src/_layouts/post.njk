{% extends "base.njk" %}

{% block content %}
  <article class="post-detail">
    <header class="post-header">
      <h1>{{ title }}</h1>
      <time datetime="{{ date }}">{{ date | date("yyyy-MM-dd") }}</time>
      {% if tags %}
        <ul class="tags">
          {% for tag in tags %}
            <li><a href="/tags/{{ tag | slug }}/">{{ tag }}</a></li>
          {% endfor %}
        </ul>
      {% endif %}
      {% if thumbnail %}
        <img class="post-thumbnail" src="{{ thumbnail }}" alt="{{ title }}" />
      {% endif %}
    </header>
    <section class="post-content">
      {{ content | safe }}
    </section>
    {% include "social-share.njk" %}
  </article>
{% endblock %}
